@{
    ViewData["Title"] = "Premium Business Solutions";
}

<section class="hero-section position-relative vh-100 d-flex align-items-center" style="background: linear-gradient(rgba(15, 23, 42, 0.6), rgba(15, 23, 42, 0.6)), url('/images/business-hero.jpg') no-repeat center center/cover;">
    <div class="container text-white">
        <div class="row">
            <div class="col-lg-8">
                <span class="badge rounded-pill bg-primary px-3 py-2 mb-4 animate__animated animate__fadeInDown">Welcome to BusinessElite</span>
                <h1 class="display-1 fw-800 mb-4 animate__animated animate__fadeInUp">Building the Future of <br><span class="text-gradient">Small Business.</span></h1>
                <p class="lead mb-5 opacity-75 animate__animated animate__fadeInUp animate__delay-1s">Elevate your brand with a digital presence that reflects your excellence. We specialize in creating high-performance, beautiful websites for the businesses that drive our community.</p>
                <div class="d-flex gap-3 animate__animated animate__fadeInUp animate__delay-2s">
                    <a asp-controller="Services" asp-action="Index" class="btn btn-primary px-5 py-3 rounded-pill fw-bold shadow">Explore Services</a>
                    <a asp-controller="About" asp-action="Index" class="btn btn-outline-light px-5 py-3 rounded-pill fw-bold">Our Story</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section-padding bg-white">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <div class="pe-lg-5">
                    <h2 class="display-5 mb-4 font-heading">We believe in the power of <span class="text-primary">Boutique.</span></h2>
                    <p class="text-muted mb-4">In a world of mass production, your unique business deserves a unique home. We don't just build websites; we build digital experiences that capture the essence of your craft.</p>
                    <ul class="list-unstyled">
                        <li class="mb-3 d-flex align-items-center"><i class="bi bi-patch-check-fill text-primary me-2"></i> Custom Hand-Crafted Designs</li>
                        <li class="mb-3 d-flex align-items-center"><i class="bi bi-patch-check-fill text-primary me-2"></i> Lightning Fast Performance</li>
                        <li class="mb-3 d-flex align-items-center"><i class="bi bi-patch-check-fill text-primary me-2"></i> Mobile-First Responsive Focus</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row g-4">
                    <div class="col-6 mt-5">
                        <div class="glass p-4 rounded-4 shadow-sm text-center">
                            <i class="bi bi-cup-hot display-4 text-primary mb-3"></i>
                            <h6 class="fw-bold">Cafes & Dining</h6>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="glass p-4 rounded-4 shadow-sm text-center">
                            <i class="bi bi-mortarboard display-4 text-primary mb-3"></i>
                            <h6 class="fw-bold">Tutoring</h6>
                        </div>
                    </div>
                    <div class="col-6 mt-n4">
                        <div class="glass p-4 rounded-4 shadow-sm text-center">
                            <i class="bi bi-bag-heart display-4 text-primary mb-3"></i>
                            <h6 class="fw-bold">Small Shops</h6>
                        </div>
                    </div>
                    <div class="col-6 mt-4">
                        <div class="glass p-4 rounded-4 shadow-sm text-center">
                            <i class="bi bi-hammer display-4 text-primary mb-3"></i>
                            <h6 class="fw-bold">Craftsmanship</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
