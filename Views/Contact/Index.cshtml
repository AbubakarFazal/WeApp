@{
    ViewData["Title"] = "Connect with Us";
}

<section class="section-padding bg-light" style="margin-top: 80px;">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-4 fw-800 font-heading">Start a <span class="text-gradient">Conversation.</span></h2>
            <p class="text-muted lead">Ready to take your business to the next level? We're here to help.</p>
        </div>
        
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="glass p-5 rounded-4 shadow-sm h-100">
                    <h4 class="fw-bold mb-4">Send a Message</h4>
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Full Name</label>
                                <input type="text" class="form-control rounded-3 border-0 bg-light p-3" placeholder="John Doe">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Email Address</label>
                                <input type="email" class="form-control rounded-3 border-0 bg-light p-3" placeholder="john@example.com">
                            </div>
                            <div class="col-12">
                                <label class="form-label small fw-bold">Inquiry Type</label>
                                <select class="form-select rounded-3 border-0 bg-light p-3">
                                    <option selected>General Business</option>
                                    <option>Cafe / Restaurant</option>
                                    <option>Tutoring / Education</option>
                                    <option>Shop / Boutique</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label small fw-bold">Message</label>
                                <textarea class="form-control rounded-3 border-0 bg-light p-3" rows="5" placeholder="Tell us about your project..."></textarea>
                            </div>
                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow">Send Message <i class="bi bi-send ms-2"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="h-100 d-flex flex-column">
                    <div class="rounded-4 overflow-hidden flex-grow-1 shadow-lg" style="min-height: 400px;">
                        <!-- Google Maps Embed -->
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d193595.9147703055!2d-74.1197637394146!3d40.69740344223377!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2s!4v1700000000000!5m2!1sen!2s" 
                            width="100%" 
                            height="100%" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                    <div class="mt-4 p-4 border rounded-4 bg-white shadow-sm">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-geo-alt-fill text-primary fs-4 me-3"></i>
                            <div>
                                <h6 class="mb-0 fw-bold">Our Location</h6>
                                <p class="small text-muted mb-0">123 Business Ave, New York, NY 10001</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-clock-fill text-primary fs-4 me-3"></i>
                            <div>
                                <h6 class="mb-0 fw-bold">Working Hours</h6>
                                <p class="small text-muted mb-0">Mon - Fri: 9:00 AM - 6:00 PM</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
